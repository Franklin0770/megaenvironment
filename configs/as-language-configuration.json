{
	"brackets": [
		["(",")"]
	],
  	"autoClosingPairs": [
		{ "open": "(", "close": ")", "notIn": [ "comment" ] },
		{ "open": "\"", "close": "\"", "notIn": [ "comment" ] },
		{ "open": "'", "close": "'", "notIn": [ "comment" ] },
		{ "open": "\\{", "close": "}", "notIn": [ "comment" ] }
	],
	"surroundingPairs": [
		["(", ")"],
		["'", "'"],
		["\"", "\""],
		["\\{", "}"]
	],
	"onEnterRules": [
		{
			"beforeText": "^\\s*(?i:rept|irpc?)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendm" }
		},
		{
			"beforeText": "^\\s*\\w+:?\\s*(?i:macro)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\tendm" }
		},
		{
			"beforeText": "^\\s*(?i:if|ifn?def|ifn?symexist|ifn?used|ifn?exist|ifn?b)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendif" }
		},
		{
			"beforeText": "^\\s*(?i:struct)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendstruct" }
		},
		{
			"beforeText": "^\\s*(?i:switch)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendcase" }
		},
		{
			"beforeText": "^\\s*(?i:case)\\b.*$",
			"action": { "indent": "indent" }
		},
		{
			"beforeText": "^\\s*(?i:elsecase)\\b.*$",
			"action": { "indent": "indent" }
		},
		{
			"beforeText": "^\\s*(?i:section)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendsection" }
    	},
		{
			"beforeText": "^\\s*(?i:expect)\\b.*$",
			"action": { "indent": "indentOutdent", "appendText": "\n\tendexpect" }
		},
		{
			"beforeText": "^\\s*(?i:phase)\\b",
			"action": { "indent": "indentOutdent", "appendText": "\n\tdephase" }
    	}
	]
}